<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffae09"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="242dp"
        android:layout_height="286dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:contentDescription="@string/usuario"
        android:src="@drawable/norwegian" />

    <EditText
        android:id="@+id/EditT_Nombre_Usuario"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:hint="@string/ingresar_usuario"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/EditT_ContraseÃ±a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:hint="@string/ingresar_contrase_a"
        android:inputType="textPassword"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btnIni"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@android:color/darker_gray"
        android:fontFamily="casual"
        android:text="@string/iniciar"
        android:textColor="@android:color/background_light"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReg"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_orange_dark"
        android:fontFamily="casual"
        android:text="@string/registrarse"
        android:textColor="@android:color/background_light"
        android:textSize="17sp"
        android:textStyle="bold" />


</LinearLayout>